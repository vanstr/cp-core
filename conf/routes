# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

POST          /login                              controllers.AuthorizationApi.login()
POST          /user                               controllers.AuthorizationApi.registerUser()
DELETE        /user                               controllers.AuthorizationApi.removeAccount()
GET           /logout                             controllers.AuthorizationApi.logout()


#TODO change format /dropbox/action
GET           /dropboxAuthUrl                     controllers.AuthorizationDropboxApi.getAuthUrl()
GET           /dropboxAuthComplete                controllers.AuthorizationDropboxApi.authComplete(code: String)
DELETE        /dropbox                            controllers.AuthorizationDropboxApi.removeAccount()

GET           /driveAuthComplete                  controllers.AuthorizationApi.driveAuthComplete(code: String)

GET           /removeDrive                        controllers.ContentApi.removeDrive()


# TODO, why not introduce unique ID for song
GET           /api/link                           controllers.ContentApi.getFileSrc(cloudId: Long, fileId: String)
GET           /api/playList                       controllers.ContentApi.getPlayList()

GET           /api/playList/:playListId           controllers.ContentApi.getPlayListById(playListId: Long)
GET           /api/playLists                      controllers.ContentApi.getPlayLists()
DELETE        /api/playList/:playListId           controllers.ContentApi.deletePlayList(playListId: Long)

POST          /api/saveSongMetadata               controllers.ContentApi.saveSongMetadata()
POST          /api/playList                       controllers.ContentApi.addPlayList()

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                       controllers.Assets.at(path="/public", file)